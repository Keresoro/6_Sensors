<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="X"
            android:id="@+id/XAxis"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="12pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:text="Y"
            android:id="@+id/YAxis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            app:layout_constraintTop_toBottomOf="@id/XAxis"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:text="Z"
            android:id="@+id/ZAxis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            app:layout_constraintTop_toBottomOf="@id/YAxis"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:text="Azimuth"
            android:id="@+id/azimuth"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            app:layout_constraintTop_toBottomOf="@id/ZAxis"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:text="Pitch"
            android:id="@+id/pitch"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            app:layout_constraintTop_toBottomOf="@id/azimuth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:text="Roll"
            android:id="@+id/roll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            app:layout_constraintTop_toBottomOf="@id/pitch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"/>
</android.support.constraint.ConstraintLayout>